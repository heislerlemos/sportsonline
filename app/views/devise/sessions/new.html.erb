<%= stylesheet_link_tag "login", :media => "all" %>

<body>
<div class="welcomeimage">

<div class="container">
<div class="form">

<section class="hero is-primary is-small">
  <div class="hero-body">
    <p class="title">
     Faça login para assistir ⚽
    </p>

  </div>
</section>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,style: "background-color: black;"%>
    <br>

    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "input is-primary" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password  , style: "background-color: black;"%>
    
    <br>
    <%= f.password_field :password, autocomplete: "current-password" , class: "input is-primary "%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <% f.check_box :remember_me %>
      <% f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in" , class: "button is-large is-fullwidth" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>

</body>