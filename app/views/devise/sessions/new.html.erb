<%= stylesheet_link_tag "login", :media => "all" %>

<body>
<div class="welcomeimage">

<div class="container">
<div class="form">
  <center>
     <%= image_tag "logo" ,width: "150"  ,style:"box-shadow: 10px 10px;"%>
  </center>
  <br>
<section class="hero is-small">
  <div class="hero-body">
    <p class="has-text-weight-bold is-size-2  has-text-light" style="text-shadow: 4px 4px black;">
     Faça login para assistir ⚽
    </p>

  </div>
</section>
<br>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email ,class: "has-text-weight-bold is-size-3  has-text-light " , style: "  text-shadow: 4px 4px black;"%>
    <br>

    <%= f.email_field :email, autofocus: true, autocomplete: "email" , class: "input is-dark" %>
  </div>
<br>
  <div class="field">
    <%= f.label :password  ,class: "has-text-weight-bold is-size-3  has-text-light " , style: "  text-shadow: 4px 4px black; "%>
    
    <br>
    <%= f.password_field :password, autocomplete: "current-password" , class: "input is-dark "%>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <% f.check_box :remember_me %>
      <% f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Aceder" , class: "button is-large is-fullwidth is-dark" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>
</div>

</body>