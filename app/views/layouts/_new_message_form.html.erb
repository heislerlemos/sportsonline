<div class="message is-light">
  <%= form_with(model:[ @single_room , @message], remote: true, class: "message-body" ) do |f| %> 
    <%= f.text_field :content, id: 'chat-text', class: "textarea is-dark ", autocomplete: 'off' %>
    <br>
    <%= f.submit data: { disable_with: false }, class: "button is-info" %>
  <% end %>
</div>


